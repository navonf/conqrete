<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="auth-form">
            <h3 class="text-center">Edit Comment</h3>
            <form  method="POST" action="/skateparks/<%= skatepark_id %>/comments/<%= comment._id %>?_method=PUT" autocomplete="off">
                <div class="form-group">
                    <textarea class="form-control text-area" type="text" name="comment[text]" placeholder="Text"
                        style="resize: none;"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn form-btn btn-block">Enter</button>
                </div>
            </form>
            <a href="/skateparks">Back to Skateparks</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>